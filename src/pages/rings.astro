---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Contact from "../components/Contact.astro";
import Image from "../components/Image.astro";
---

<Layout title="rings">
    <section>
      <Header/>
        <div class="container mb-5">
            <h1 class="text-center mb-5 mt-5">Rings</h1>
          <div class="row">
            <div class="col-12 col-md-6 col-lg-3">
             <Image img_url="/public/image/ring-1.jpg"></Image>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
             <Image img_url="/public/image/ring-2.jpg"></Image>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
             <Image img_url="/public/image/ring-3.jpg"></Image>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
             <Image img_url="/public/image/ring-4.jpg"></Image>
            </div>
            <div class="col-12 col-md-6 col-lg-3 mt-3 mb-3">
             <Image img_url="/public/image/ring-5.jpg"></Image>
            </div>
            <div class="col-12 col-md-6 col-lg-3 mt-3 mb-3">
             <Image img_url="/public/image/ring-6.jpg"></Image>
            </div>
          </div>
        </div>
      </section>
      <Contact/>
      <Footer/>
</Layout>
